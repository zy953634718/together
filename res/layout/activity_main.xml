<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.together.MainActivity" >

  <com.baidu.mapapi.map.MapView  
    android:id="@+id/bmapView"  
    android:layout_width="fill_parent"  
    android:layout_height="fill_parent"  
    android:clickable="true" />
  
  
  <LinearLayout 
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_margin="10dp"
      android:padding="5dp"
      android:focusableInTouchMode="true"
      android:focusable="true"
      android:orientation="horizontal"
      android:background="#ffffff"
      android:id="@+id/main_layout_search"
      >
      <EditText 
          android:id="@+id/main_edit_input"
          android:layout_width="fill_parent"
          android:layout_height="40dp"
          android:singleLine="true"
          android:layout_weight="1"
          android:background="#ffffff"
          android:textSize="16sp"
          android:paddingLeft="10dp"
          android:paddingStart="10dp"
          android:paddingRight="0dp"
          android:paddingEnd="0dp"
          android:hint="输入地点"
          />
        <TextView 
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="#ADADAD"
            />
      <TextView 
          android:id="@+id/main_btu_search"
          android:layout_width="fill_parent"
          android:layout_height="40dp"
          android:gravity="center"
          android:text="搜索"
          android:textSize="16sp"
          android:layout_weight="6"
          />
  </LinearLayout>
  
  <LinearLayout 
      android:id="@+id/main_layout_switch"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"
      android:layout_below="@id/main_layout_search"
      android:padding="5dp"
      android:orientation="vertical"
      >
      <TextView 
          android:id="@+id/main_btu_base"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="5dp"
          android:background="#ffffff"
          android:textSize="14sp"
          android:text="普通"
          />
      <TextView 
          android:layout_marginTop="5dp"
          android:id="@+id/main_btu_satellite"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="5dp"
          android:background="#ffffff"
          android:textSize="14sp"
          android:text="卫星"
          />
      <TextView 
          android:id="@+id/main_btu_traffic"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="5dp"
          android:textSize="14sp"
          android:layout_marginTop="5dp"
          android:background="#ffffff"
          android:text="交通"
          />
  </LinearLayout>
  
  <LinearLayout 
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:orientation="horizontal"
      android:padding="10dp"
      >
      <TextView 
          android:id="@+id/main_btu_path"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:text="显示路径"
          android:padding="5dp"
          android:textSize="20sp"
          android:gravity="center"
          android:background="#ffffff"
          />
      
  </LinearLayout>

</RelativeLayout>
